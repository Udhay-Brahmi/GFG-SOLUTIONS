// { Driver Code Starts
// Initial Template for C++
#include <bits/stdc++.h>
using namespace std;

 // } Driver Code Ends


// User function Template for C++
class Solution {
  public:
    long long int nthEvenFibonacci(long long int n) {
        if(n<1)return n;
        if(n==1)return 2;
        return (4*(nthEvenFibonacci(n - 1)) + nthEvenFibonacci(n - 2));
    }
};

// { Driver Code Starts.
int main() {
    int t;
    cin >> t;
    while (t--) {
        long long int n;
        cin >> n;
        Solution ob;
        cout << ob.nthEvenFibonacci(n) << endl;
    }
    return 0;
}
  // } Driver Code Ends
