#include <bits/stdc++.h>
using namespace std;

int main() {
	int n,a;
	long long d;cin>>n;
	while(n--){
	    cin>>a;
	    long long int even=0,odd=0;
	    for(int i=0;i<a;i++){
	        cin>>d;
	        if(i%2==0){even+=d;}
	        else{odd+=d;}
	    }
	    for(int i=0;i<a;i++){
	        cin>>d;
	        if(i%2==0){odd+=d;}
	        else{even+=d;}
	    }
	    cout<<min(even,odd)<<endl;
	}
	return 0;
}
